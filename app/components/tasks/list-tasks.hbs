<div class="list-tasks">
  <table class="table">
    <thead>
    <tr>
      <th>
        id
      </th>
      <th>
        Name
      </th>
      <th>
        Created by
      </th>
      <th>
        isComplete?
      </th>
      <th>
        Delete
      </th>
    </tr>
    </thead>
    <tbody>
    {{#each @tasks as |task|}}
      <tr>
        <td>
               <span>
                 {{task.id}}
               </span>
        </td>
        <td class="{{if task.isComplete "done" "not-done"}}">
          {{task.name}}
        </td>
        <td >
          {{task.author}}
        </td>
        <td>
          {{#if task.isComplete}}
            <i class="bi bi-check-circle-fill"  style="font-size: 2rem; color: cornflowerblue;"></i>
          {{/if}}
        </td>
        <td>
            <div {{on "click" (fn @deleteTask task)}}>
              <i class="bi bi-trash" style="font-size: 2rem; color: cornflowerblue;"></i>
            </div>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>